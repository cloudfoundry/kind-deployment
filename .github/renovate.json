{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^docker-bake.hcl$/"
      ],
      "matchStrings": [
        "# renovate: depName=(?<depName>.*?)( registryUrl=(?<registryUrl>.*?))?\\s+default\\s+= \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v?(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^values.yaml.gotmpl$/"
      ],
      "matchStrings": [
        "# renovate: depName=(?<depName>.*?)( registryUrl=(?<registryUrl>.*?))?\\s+.+: \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v?(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^releases/.*/Chart.yaml$/",
        "/^releases/.*/values.yaml$/",
        "/^values.yaml.gotmpl$/"
      ],
      "matchStrings": [
        "# renovate: image=(?<packageName>.*?) depName=(?<depName>.*?)\\s+appVersion: (?<currentValue>\\d+\\.\\d+\\.\\d+)",
        "# renovate: image=(?<packageName>.*?) depName=(?<depName>.*?)\\s+tag: \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\"",
        "# renovate: image=(?<packageName>.*?) depName=(?<depName>.*?)\\s+.+: \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "docker",
      "extractVersionTemplate": "^v?(?<version>.*)$"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["helmfile"],
      "enabled": true,
      "registryAliases": {
        "cloudfoundry-k8s": "ghcr.io/cloudfoundry/helm",
        "minio": "registry-1.docker.io/bitnamicharts",
        "bitnami": "https://charts.bitnami.com/bitnami",
        "istio": "https://istio-release.storage.googleapis.com/charts",
        "nats": "https://nats-io.github.io/k8s/helm/charts",
        "jetstack": "quay.io/jetstack/charts"
      }
    }
  ]
}
