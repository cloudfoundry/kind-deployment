{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^releases/.*/Chart.yaml$/",
        "/^releases/.*/values.yaml$/",
        "/^values.yaml.gotmpl$/",
        "/^docker-bake.hcl$/"
      ],
      "matchStrings": [
        "# renovate: dataSource=(?<datasource>.*?) depName=(?<depName>.*?)( packageName=(?<packageName>.*?))?\\s+\\S+?(: | = )\"?(?<currentValue>\\d+\\.\\d+\\.\\d+)\"?"
      ],
      "extractVersionTemplate": "^v?(?<version>.*)$"
    }
  ],
  "helmfile": {
    "enabled": true,
    "registryAliases": {
      "nats": "https://nats-io.github.io/k8s/helm/charts",
      "istio": "https://istio-release.storage.googleapis.com/charts",
      "bitnami": "https://charts.bitnami.com/bitnami",
      "cloudfoundry-k8s": "ghcr.io/cloudfoundry/helm",
      "jetstack": "https://charts.jetstack.io"
    }
  },
  "helm-values": {
    "enabled": false
  }
}
